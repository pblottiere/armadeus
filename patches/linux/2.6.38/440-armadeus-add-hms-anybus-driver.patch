+static int anybus_stop(struct net_device *dev)
+{
+	struct anybus_private *anybus_priv = netdev_priv(dev);
+
+	free_irq(dev->irq, (void *)dev);
+	gpio_set_value(anybus_priv->gpio_reset, 1);
+	module_initialized = 0;
+
+	return 0;
+}
