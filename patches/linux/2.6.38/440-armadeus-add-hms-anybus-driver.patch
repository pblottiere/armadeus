+static unsigned int anybus_poll(struct file *filp, struct poll_table_struct *p)
+{
+	poll_wait(filp, &anybus_read_wait_queue, p);
+
+	if ((received_mailbox_message) && (module_initialized))
+		return POLLIN;
+	else
+		return 0;
+}
