--- buildroot.orig/Config.in	2011-05-27 16:18:21.000000000 +0200
+++ buildroot/Config.in	2012-01-13 13:51:18.000000000 +0100
@@ -16,6 +16,10 @@
 
 menu "Commands"
 
+config BR2_COPY
+	string "Copy command"
+	default "cp -R "
+
 config BR2_WGET
 	string "Wget command"
 	default "wget --passive-ftp -nd -t 3"
