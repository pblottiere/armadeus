+
+define DOWNLOAD_COPY
+	pushd $(DL_DIR) > /dev/null && \
+	$(COPY) $($(PKG)_SITE) $($(PKG)_BASE_NAME) && \
+	$(TAR) czf $($(PKG)_SOURCE) $($(PKG)_BASE_NAME) && \
+	rm -rf $($(PKG)_BASE_NAME) && \
+	popd > /dev/null
+endef
+
+define SOURCE_CHECK_COPY
+	test -e $($(PKG)_SITE)
+endef
+
+define SHOW_EXTERNAL_DEPS_COPY
+	echo $(2)
+endef
